{
	"name": "tasuku",
	"version": "0.0.0-semantic-release",
	"description": "タスク — The minimal task runner",
	"keywords": [
		"simple",
		"minimal",
		"task",
		"runner",
		"cli"
	],
	"license": "MIT",
	"repository": "privatenumber/tasuku",
	"funding": "https://github.com/privatenumber/tasuku?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"require": {
			"types": "./dist/index.d.cts",
			"default": "./dist/index.cjs"
		},
		"import": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"imports": {
		"#tasuku": {
			"types": "./src/index.ts",
			"development": "./src/index.ts",
			"default": "./dist/index.mjs"
		}
	},
	"packageManager": "pnpm@10.19.0",
	"scripts": {
		"lint": "lintroll --node --cache --git",
		"test": "tsx -C development tests",
		"type-check": "tsc",
		"build": "pkgroll --target=node12 --minify --clean-dist",
		"prepack": "clean-pkg-json",
		"generate-media": "concurrently \"vhs .github/media/basic.tape\" \"vhs .github/media/collapse.tape\" \"vhs .github/media/grouped.tape\" \"vhs .github/media/nested.tape\" \"vhs .github/media/parallel.tape\" \"vhs .github/media/set-error.tape\" \"vhs .github/media/set-title.tape\" \"vhs .github/media/task-list.tape\" \"vhs .github/media/task-output.tape\" \"vhs .github/media/task-states.tape\""
	},
	"devDependencies": {
		"@types/node": "^24.10.9",
		"ansi-escapes": "^7.2.0",
		"ansi-regex": "^6.2.2",
		"clean-pkg-json": "^1.3.0",
		"concurrently": "^9.2.1",
		"expect-type": "^1.3.0",
		"fs-fixture": "^2.11.0",
		"lintroll": "^1.26.1",
		"manten": "^1.10.0",
		"nano-spawn": "^2.0.0",
		"node-pty": "1.2.0-beta.10",
		"p-map": "^5.5.0",
		"patch-console": "^2.0.0",
		"pkgroll": "^2.21.5",
		"string-width": "^5.1.2",
		"strip-ansi": "^7.1.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"yoctocolors": "^2.1.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"node-pty"
		]
	}
}
